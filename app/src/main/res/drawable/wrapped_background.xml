<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Green Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_green"/> <!-- Green color code -->
        </shape>
    </item>

    <!-- White Box with Rounded Corners (Padding used to create the border) -->
    <item android:left="20dp" android:top="60dp" android:right="20dp" android:bottom="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White color code -->
            <corners android:radius="20dp"/> <!-- Adjust radius for rounded corners -->
        </shape>
    </item>
</layer-list>